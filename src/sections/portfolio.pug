section.portfolio#portfolio
    h1.heading Портфолио
    p.description В каждой нашей работе заложена частичка нашей души
    .glide
        .glide__track(data-glide-el="track")
            ul.glide__slides
                li.glide__slide
                    img(src="./assets/portfolio1.png", alt="").photo
                li.glide__slide
                    img(src="./assets/portfolio2.png", alt="").photo
                li.glide__slide
                    img(src="./assets/portfolio3.png", alt="").photo
                li.glide__slide
                    img(src="./assets/portfolio4.png", alt="").photo
        .glide__bullets(data-glide-el="controls[nav]")
            button.glide__bullet(data-glide-dir="=0")
            button.glide__bullet(data-glide-dir="=1")
            button.glide__bullet(data-glide-dir="=2")
            button.glide__bullet(data-glide-dir="=3")